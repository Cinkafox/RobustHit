<lobby:LobbyUI 
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lobby="clr-namespace:Content.Client.Lobby"
    xmlns:dataBindingUi="clr-namespace:Content.Client.DataBindingUI"
    xmlns:controls="clr-namespace:Content.Client.DataBindingUI.Controls">
    <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <controls:ReactLabel Text="{dataBindingUi:ContextBinding 'state Message'}"/>
        <controls:ReactButton Text="Hru!" Handler="{dataBindingUi:ContextBinding 'state SayHelloFunHandler'}"/>
    </BoxContainer>
</lobby:LobbyUI>